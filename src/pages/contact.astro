---
import Layout from '@layouts/Layout.astro';
---

<Layout title="Contact">
  <form name="contact" method="POST" netlify>
    <input type="hidden" name="form-name" value="contact">
    <p class="hidden">
      <label>
        Don’t fill this out if you’re human: <input name="bot-field"/>
      </label>
    </p>
    <div class="pb-8">
      <label for="name"
             class="block text-2xl text-white dark:text-white uppercase bg-black inline-flex px-2">Name</label>
      <input type="text" id="name" name="name"
             class="bg-white border border-gray-950 text-gray-900 border-4  focus:border-gray-950 focus:border-gray-950 block w-full p-2.5 text-2xl px-6 outline-none"
             required>
    </div>
    <div class="pb-8">
      <label for="email"
             class="block text-2xl text-white dark:text-white uppercase bg-black inline-flex px-2">Email</label>
      <input type="email" id="email" name="email"
             class="bg-white border border-gray-950 text-gray-900 border-4 focus:border-gray-950 focus:border-gray-950 block w-full p-2.5 text-2xl px-6 outline-none"
             required>
    </div>
    <div>
      <label for="message" class="block text-2xl text-white dark:text-white uppercase bg-black inline-flex px-2">Message</label>
      <textarea id="message" name="message"
                class="bg-white border border-gray-950 text-gray-900 border-4  focus:border-gray-950 focus:border-gray-950 block w-full p-2.5 text-2xl min-h-[200px] px-6 outline-none"
                required></textarea>
    </div>
    <div class="text-right">
      <button type="submit"
              class="text-white bg-black hover:bg-gray-950 focus:ring-4 focus:gray-950 active:gray-950 px-8 py-4 mr-2 mb-2 focus:outline-none uppercase text-2xl outline-none">
        Submit
      </button>
    </div>
  </form>
</Layout>
